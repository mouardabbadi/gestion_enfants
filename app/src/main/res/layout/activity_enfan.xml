            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_x="10dp"
                android:layout_y="1457dp"
                android:background="@drawable/button"
                android:text="Enregistrer"
