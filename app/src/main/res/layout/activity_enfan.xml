                android:padding="20dp" />

            <TextView
                android:id="@+id/labeltype3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="8dp"
                android:layout_y="815dp"
                android:fontFamily="@font/poppins_light"
                android:text="Classe :"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/classe"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_x="11dp"
                android:layout_y="852dp"
                android:background="@drawable/text"
                android:entries="@array/classs"
                android:spinnerMode="dropdown" />


            <TextView
                android:id="@+id/labeltype2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="196dp"
                android:layout_y="720dp"
                android:fontFamily="@font/poppins_light"
                android:text="Section :"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/section"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_x="198dp"
                android:layout_y="755dp"
                android:background="@drawable/text"
                android:entries="@array/section"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
