                android:paddingLeft="10sp"
                android:fontFamily="@font/poppins_light"
                android:singleLine="true" />

            <TextView
                android:id="@+id/labeltype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="9dp"
                android:layout_y="489dp"
                android:fontFamily="@font/poppins_light"
                android:text="Type de parenté :"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/type"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_x="9dp"
                android:layout_y="529dp"
                android:background="@drawable/text"
                android:fontFamily="@font/poppins_light"
                android:entries="@array/type"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/lb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="209dp"
                android:layout_y="490dp"
                android:fontFamily="@font/poppins_light"
                android:text="Télephone :"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/telephone"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_x="209dp"
                android:layout_y="530dp"
                android:background="@drawable/text"
                android:paddingLeft="10dp"
                android:fontFamily="@font/poppins_light"
                android:inputType="number"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="9dp"
                android:layout_y="590dp"
                android:fontFamily="@font/poppins_light"
                android:text="CIN :"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cin"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_x="9dp"
                android:layout_y="620dp"
                android:background="@drawable/text"
                android:paddingLeft="10sp"
                android:singleLine="true" />
            /**************Block Enfant***************/

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="9dp"
                android:layout_y="680dp"
                android:fontFamily="@font/poppins_light"
                android:text="Informations relatives à l'inscription:"
                android:textColor="@color/primary"
                android:textSize="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="9dp"
                android:layout_y="720dp"
                android:fontFamily="@font/poppins_light"
                android:text="C° Massar:"
                android:textColor="@color/black"
